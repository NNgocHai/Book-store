<?xml version="1.0" encoding ="UTF-8"?>

<!-- default forder chua pattern layout(header, menu, footer) cua admin + client -->
<decorators defaultdir="/decorators">

    <!-- Nhung URL k su dung template cua decorators-->
    <excludes>
        <pattern>/404-page.html</pattern>
        <pattern>/ajax*</pattern>
        <pattern>/admin/login</pattern>
        <pattern>/admin/logout</pattern>
    </excludes>
    <!-- decorator dua vao ten cua URL de apply giao dien tuong ung cho page -->
    <!-- load trang admin -->
    <decorator name="admin" page="admin.jsp">
        <pattern>/admin*</pattern>
    </decorator>
    <decorator>

    </decorator>


</decorators>